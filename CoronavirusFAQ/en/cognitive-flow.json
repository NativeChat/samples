    "welcome": {
      "type": "support",
      "steps": [
        {
          "type": "message",
          "messages": [
            [
              "I am a bot that can answer your questions about Covid."
            ]
          ]
        },
        {
          "type": "conversation",
          "conditions": [
            "{{ $not ($has conversation) }}"
          ],
          "conversation": "help"
        }
      ]
    },
