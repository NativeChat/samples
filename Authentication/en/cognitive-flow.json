{
  "commands": {
    "RESTART": [
      "restart"
    ],
    "NEXT-PAGE": [
      "Next 5"
    ]
  },
  "settings": {
    "invalid-replies": [
      "I am not sure I understood what you said."
    ],
    "general-failure": [
      "We are experiencing technical difficulties at this moment."
    ],
    "silence-timeout": 60,
    "authentication": {
      "entity": "auth",
      "messages": [
        "Please login with your account."
      ],
      "acknowledgements": [
        "You are now logged in."
      ],
      "display": {
        "type": "login",
        "template": {
          "title": "ACME Hospital - Login",
          "url": "https://bs-login.darvin.ai/login",
          "image": "https://darvin.ai/img/logo.png"
        }
      }
    },
    "persist-entities": [
      "auth"
    ]
  },
  "conversations": {
    "getting-started": {
      "steps": [
        {
          "type": "message",
          "messages": [
            "Hello there, I am the virtual assistant of ACME Hospital powered by Artificial Intelligence. If you get stuck,you can always restart our conversation by typing 'restart'"
          ]
        },
        {
          "type": "question",
          "entity": "conversation",
          "entity-type": "Conversation",
          "messages": [
            "Here is what I can do for you:"
          ],
          "display": {
            "type": "quick-reply",
            "data": [
              "Book a doctor",
              "Contact operator"
            ]
          }
        }
      ]
    },
    "contactOperator": {
      "steps": [
        {
          "type": "confirmation",
          "entity": "confirmation",
          "entity-type": "Text",
          "messages": [
            "Do you want to continue the conversation with an operator?"
          ],
          "validation": [
            {
              "type": "match",
              "parameters": {
                "values": [
                  "Yes",
                  "yes"
                ]
              },
              "error-message": [
                "OK, I won't contact an operator yet. Let me know what you want to do next."
              ]
            }
          ],
          "display": {
            "type": "quick-reply",
            "data": [
              "Yes",
              "No"
            ]
          }
        },
        {
          "type": "message",
          "stay-silent": true,
          "messages": [
            "I am transfering you to an operator, and I will stay silent for the next 60 minutes. If you want to get back to me, please type 'restart'."
          ]
        }
      ]
    },
    "bookDoctor": {
      "steps": [
        {
          "type": "question",
          "entity": "doctor",
          "entity-type": "Doctor",
          "messages": [
            "What's the name of the doctor that you want to see?"
          ],
          "acknowledgements": [
            "I understand that you want to meet with {{context.doctor.FirstName}} {{context.doctor.LastName}}."
          ],
          "ambiguity": [
            "I am not sure I understand the doctor you want to meet. Can you select one of the following?"
          ],
          "validation": [
            {
              "type": "custom",
              "parameters": {
                "url": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/ValidateDoctor?doctorId={{encodeURI context.doctor.ExternalId}}",
                "expected-response": "OK"
              },
              "error-message": [
                "Unfortunately, {{context.doctor.Title}} {{context.doctor.FirstName}} {{context.doctor.LastName}} is not available."
              ]
            }
          ],
          "protected": true,
          "display": {
            "type": "quick-reply",
            "data-source": {
              "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctors",
              "method": "GET"
            },
            "template": "{{context.FirstName}} {{context.LastName}}"
          }
        },
        {
          "type": "question",
          "entity": "date",
          "entity-type": "Date",
          "messages": [
            "What date do you want to meet with {{context.doctor.FirstName}} {{context.doctor.LastName}}?"
          ],
          "validation": [
            {
              "type": "custom",
              "parameters": {
                "url": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/ValidateDate?doctorId={{encodeURI context.doctor.ExternalId}}&date={{encodeURI context.date}}",
                "expected-response": "OK"
              },
              "error-message": [
                "Unfortunately, {{context.doctor.Title}} {{context.doctor.FirstName}} {{context.doctor.LastName}} is not available on {{context.date}}."
              ]
            }
          ],
          "display": {
            "type": "quick-reply",
            "data-source": {
              "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctorDays?doctorId={{encodeURI context.doctor.ExternalId}}",
              "method": "GET"
            }
          }
        },
        {
          "type": "question",
          "entity": "time",
          "entity-type": "Time",
          "messages": [
            "What time do you want to meet {{context.doctor.FirstName}} {{context.doctor.LastName}} on {{context.date}}?"
          ],
          "validation": [
            {
              "type": "custom",
              "parameters": {
                "url": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/ValidateTime?doctorId={{encodeURI context.doctor.ExternalId}}&date={{encodeURI context.date}}&time={{encodeURI context.time}}",
                "expected-response": "OK"
              },
              "error-message": [
                "Unfortunately, {{context.doctor.FirstName}} {{context.doctor.LastName}} is not available on {{context.date}} at {{context.time}}."
              ]
            }
          ],
          "display": {
            "type": "quick-reply",
            "data-source": {
              "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctorHours?doctorId={{encodeURI context.doctor.ExternalId}}&date={{encodeURI context.date}}",
              "method": "GET"
            }
          }
        },
        {
          "type": "question",
          "entity": "contactName",
          "entity-type": "Text",
          "messages": [
            "What are your first and last names?"
          ],
          "validation": [
            {
              "type": "regex",
              "parameters": {
                "value": "(\\w.+\\s).+"
              },
              "error-message": [
                "Please enter your first and last name."
              ]
            }
          ]
        },
        {
          "type": "confirmation",
          "entity": "confirmation",
          "entity-type": "Text",
          "messages": [
            "I am booking you an appointment for {{context.doctor.Title}} {{context.doctor.FirstName}} {{context.doctor.LastName}} on {{context.date}} at {{context.time}}. Can you please confirm that the information is correct?"
          ],
          "validation": [
            {
              "type": "match",
              "parameters": {
                "values": [
                  "Yes",
                  "yes"
                ]
              },
              "error-message": [
                "Let me know what you want to change before I can book you an appointment."
              ]
            }
          ],
          "display": {
            "type": "quick-reply",
            "data": [
              "Yes",
              "No"
            ]
          }
        },
        {
          "type": "webhook",
          "protected": true,
          "data-source": {
            "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Appointments",
            "method": "POST",
            "headers": {
              "Content-Type": "application/json",
              "Authorization": "Bearer {{context.auth.accessToken}}"
            },
            "payload": {
              "DoctorID": "{{context.doctor.ExternalId}}",
              "PatientName": "{{context.contactName}}",
              "Date": "{{context.date}}",
              "Time": "{{context.time}}"
            }
          }
        },
        {
          "type": "message",
          "messages": [
            "Congratulations. You have an appointment with {{context.doctor.Title}} {{context.doctor.FirstName}} {{context.doctor.LastName}} for {{context.date}} at {{context.time}}. See you soon!"
          ]
        }
      ]
    }
  }
}